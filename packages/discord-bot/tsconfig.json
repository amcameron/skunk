{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "baseUrl": "..",
    "paths": {
      "#burrow/*": ["burrow/*"]
    }
  },
  "files": [
    "index.ts",
    "test/index.ts"
  ],
  "include": [
    "commands/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "references": [
    {"path": "../burrow"}
  ]
}
